    <script>
        let currentStep = 1;
        const form = document.getElementById('multiStepForm');
        const submitButton = document.getElementById('submitButton');

        function showStep(stepNumber) {
            document.querySelectorAll('.form-step').forEach(step => step.classList.remove('active'));
            document.getElementById(`step-${stepNumber}`).classList.add('active');
            const steps = document.querySelectorAll('.step');
            steps.forEach((step, index) => {
                const stepNum = index + 1;
                if (stepNum === stepNumber) {
                    step.classList.add('active');
                    step.classList.remove('completed');
                } else if (stepNum < stepNumber) {
                    step.classList.add('completed');
                    step.classList.remove('active');
                } else {
                    step.classList.remove('active');
                    step.classList.remove('completed');
                }
            });
            currentStep = stepNumber;
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        function nextStep(stepNumber) {
            if (validateStep(stepNumber)) {
                showStep(stepNumber + 1);
            }
        }
        function prevStep(stepNumber) {
            showStep(stepNumber - 1);
        }
        function validateStep(stepNumber) {
            let isValid = true;
            const stepElement = document.getElementById(`step-${stepNumber}`);
            const requiredInputs = stepElement.querySelectorAll('[required]');

            // Tüm error mesajlarını temizle
            stepElement.querySelectorAll('.error-message').forEach(el => el.style.display = 'none');
            stepElement.querySelectorAll('input, select, textarea').forEach(el => el.style.borderColor = 'var(--border-color)');

            if (stepNumber === 1) {
                const nameInput = document.getElementById('name');
                const emailInput = document.getElementById('email');

                if (nameInput.value.trim() === '') {
                    showError(nameInput, 'Bu alan zorunludur.');
                    isValid = false;
                } else { hideError(nameInput); }

                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(emailInput.value)) {
                    showError(emailInput, 'Geçerli bir e-posta girin.');
                    isValid = false;
                } else { hideError(emailInput); }
            }

            // Adım 2 ve 3 için zorunlu alan doğrulaması gerekirse buraya eklenebilir.
            // Örneğin CV'yi zorunlu yapmak:
            if (stepNumber === 3) {
                const cvInput = document.getElementById('cv');
                // CV'nin zorunlu olduğunu varsayalım:
                if (cvInput.files.length === 0) {
                    const cvLabel = cvInput.closest('.form-group').querySelector('label');
                    showError(cvInput, 'CV yüklemek zorunludur.');
                    isValid = false;
                }
            }

            return isValid;
        }
        function showError(inputElement, message) {
            const errorSpan = inputElement.nextElementSibling;
            let targetElement = inputElement;

            // Dosya inputları için hata mesajını farklı bir yere yazdır
            if (inputElement.type === 'file') {
                // Dosya inputlarının hata mesajları için span'i label'ın yanına koyduk
                const group = inputElement.closest('.form-group');
                targetElement = group.querySelector('.file-input-display') || inputElement;

                let fileErrorSpan = group.querySelector('.file-error-message');
                if (!fileErrorSpan) {
                    fileErrorSpan = document.createElement('span');
                    fileErrorSpan.classList.add('error-message', 'file-error-message');
                    group.appendChild(fileErrorSpan);
                }
                fileErrorSpan.textContent = message;
                fileErrorSpan.style.display = 'block';

            } else if (errorSpan && errorSpan.classList.contains('error-message')) {
                errorSpan.textContent = message;
                errorSpan.style.display = 'block';
            }
            targetElement.style.borderColor = '#d93025';
        }
        function hideError(inputElement) {
            const errorSpan = inputElement.nextElementSibling;
            let targetElement = inputElement;

            if (inputElement.type === 'file') {
                const group = inputElement.closest('.form-group');
                targetElement = group.querySelector('.file-input-display') || inputElement;
                const fileErrorSpan = group.querySelector('.file-error-message');
                if (fileErrorSpan) { fileErrorSpan.style.display = 'none'; }
            } else if (errorSpan && errorSpan.classList.contains('error-message')) {
                errorSpan.style.display = 'none';
            }

            targetElement.style.borderColor = 'var(--border-color)';
        }
        function updateFileName(inputElement) {
            const fileNameSpan = inputElement.previousElementSibling.querySelector(".file-name");
            if (inputElement.files && inputElement.files.length > 0) {
                fileNameSpan.textContent = inputElement.files[0].name;
                fileNameSpan.style.fontStyle = "normal";
                fileNameSpan.style.color = "#333";
                hideError(inputElement); // Dosya seçilince hatayı kaldır
            } else {
                fileNameSpan.textContent = "Dosya seçilmedi...";
                fileNameSpan.style.fontStyle = "italic";
                fileNameSpan.style.color = "#777";
            }
        }

        // Form Gönderiminde Loading Durumu
        form.addEventListener('submit', function (event) {
            if (!validateStep(3)) {
                event.preventDefault(); // Doğrulama başarısızsa gönderimi durdur
                showStep(3); // Kullanıcıyı son adıma götür
                return;
            }

            // Gönderim başarılıysa loading durumunu göster
            submitButton.disabled = true;
            submitButton.textContent = 'Gönderiliyor... Lütfen Bekleyin...';
            submitButton.style.backgroundColor = '#6c757d';
        });

        document.getElementById('multiStepForm').addEventListener('keydown', function (event) {
            if (event.key === 'Enter') {
                if (event.target.tagName.toLowerCase() !== 'textarea') {
                    event.preventDefault();
                    const nextButton = document.querySelector(`#step-${currentStep} .nav-button.next`);
                    if (nextButton) {
                        nextButton.click();
                    }
                }
            }
        });

    </script>
</body>

